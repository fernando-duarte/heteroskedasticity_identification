{
  "name": "hetid Econometrics Learning Environment",

  // Lightweight image for educational use
  "image": "ghcr.io/rocker-org/devcontainer/tidyverse:4.5.0",

  "features": {
    // Essential R packages for learning
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "AER,boot,dplyr,ggplot2,knitr,rmarkdown,devtools,here,DT,plotly",
      "installSystemRequirements": true
    },
    "ghcr.io/rocker-org/devcontainer-features/r-history:1": {},
    "ghcr.io/rocker-org/devcontainer-features/pandoc:1": {},
    "ghcr.io/rocker-org/devcontainer-features/quarto:1": {}
  },

  // VS Code customizations for learning
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "quarto.quarto",
        "ms-toolsai.jupyter"
      ],

      "settings": {
        // Beginner-friendly R settings
        "r.rterm.linux": "/usr/local/bin/R",
        "r.rpath.linux": "/usr/local/bin/R",
        "r.bracketedPaste": true,
        "r.sessionWatcher": true,
        "r.alwaysUseActiveTerminal": true,

        // Learning-focused editor settings
        "editor.fontSize": 14,
        "editor.lineNumbers": "on",
        "editor.rulers": [80],
        "workbench.colorTheme": "Default Light+",
        "workbench.startupEditor": "readme"
      }
    }
  },

  // Educational port forwarding
  "forwardPorts": [
    8787,  // RStudio Server
    3838,  // Shiny apps
    4321   // Quarto preview
  ],

  "portsAttributes": {
    "8787": {
      "label": "RStudio Server",
      "onAutoForward": "openBrowserOnce",
      "visibility": "public",
      "requireLocalPort": false,
      "protocol": "http"
    },
    "3838": {
      "label": "Shiny Apps",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "4321": {
      "label": "Quarto Preview",
      "onAutoForward": "openPreview",
      "visibility": "public"
    }
  },

  // Educational lifecycle hooks
  "onCreate": "R -e 'install.packages(c(\"renv\", \"httpgd\"))'",

  "postCreateCommand": "R -e 'devtools::install_github(\"fernando-duarte/heteroskedasticity_identification\"); library(hetid); cat(\"\\nðŸŽ‰ hetid package ready! Try: run_lewbel_demo()\\n\")'",

  "postStartCommand": "echo 'ðŸ“š Learning Environment Ready!' && echo 'ðŸ”— RStudio Server: http://localhost:8787' && echo 'ðŸ“– Try: library(hetid); run_lewbel_demo()'",

  // Educational user setup
  "remoteUser": "rstudio",

  // Learning-friendly environment
  "remoteEnv": {
    "DISABLE_AUTH": "true",
    "RSTUDIO_WHICH_R": "/usr/local/bin/R",
    "R_LIBS_USER": "/usr/local/lib/R/site-library"
  },

  // Working directory
  "workspaceFolder": "/home/rstudio/workspace",

  // Minimal resource requirements for free tier
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "16gb"
  },

  // Simple run arguments
  "runArgs": [
    "--cap-add=SYS_PTRACE"
  ],

  // Wait for setup
  "waitFor": "postCreateCommand"
}
