{
  "name": "hetid R 4.5.0 Development (Codespaces Secure)",

  // Use a reliable base image for Codespaces (parallel config, not modifying main setup)
  "image": "rocker/tidyverse:4.5.0",

  "features": {
    // Essential R packages for the project
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "AER,boot,dplyr,furrr,future,ggplot2,purrr,rlang,tidyr,devtools,testthat,knitr,rmarkdown,here,fs,glue,cli",
      "installSystemRequirements": true
    },

    // Python for pre-commit hooks (minimal)
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": false
    },

    // Git integration
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },

    // GitHub CLI
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },

    // Basic utilities
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "configureZshAsDefaultShell": false,
      "installOhMyZsh": false,
      "upgradePackages": true
    }
  },

  "workspaceFolder": "/home/rstudio",

  // Port forwarding for RStudio Server and other services
  "forwardPorts": [
    8787,  // RStudio Server
    8080,  // httpgd for VS Code plots
    3838,  // Shiny apps
    4321   // Quarto preview
  ],

  // Security-focused port configuration
  "portsAttributes": {
    "8787": {
      "label": "RStudio Server",
      "onAutoForward": "notify",
      "visibility": "private",
      "requireLocalPort": false,
      "protocol": "http"
    },
    "8080": {
      "label": "R Graphics (httpgd)",
      "onAutoForward": "silent",
      "visibility": "private",
      "requireLocalPort": false
    },
    "3838": {
      "label": "Shiny Apps",
      "onAutoForward": "notify",
      "visibility": "private"
    },
    "4321": {
      "label": "Quarto Preview",
      "onAutoForward": "openPreview",
      "visibility": "private"
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        // R language support
        "REditorSupport.r",
        "reditorsupport.r-lsp",

        // Core development tools
        "ms-python.python",
        "GitHub.vscode-pull-request-github"
      ],

      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.colorTheme": "Default Dark+",
        "workbench.startupEditor": "readme"
      }
    }
  },

  // Simplified lifecycle hooks
  "onCreate": "R -e 'if (!requireNamespace(\"devtools\", quietly = TRUE)) install.packages(\"devtools\")' && pip install --user pre-commit",

  "postCreateCommand": "echo 'Installing dependencies...' && R -e 'if (file.exists(\"DESCRIPTION\")) devtools::install_deps(dependencies = TRUE)' && echo 'Setup complete! RStudio Server: http://localhost:8787'",

  "postStartCommand": "echo 'ðŸš€ Development environment ready!' && echo 'ðŸ“Š RStudio Server: http://localhost:8787' && echo 'ðŸ’» VS Code: Use R extension'",

  "postAttachCommand": "echo 'Welcome to hetid R development!'",

  // Secure container configuration
  "remoteUser": "rstudio",
  "containerUser": "rstudio",

  // Secure environment variables (no ROOT or DISABLE_AUTH)
  "remoteEnv": {
    "RSTUDIO_WHICH_R": "/usr/local/bin/R",
    "R_LIBS_USER": "/usr/local/lib/R/site-library",
    "GITHUB_CODESPACES": "true"
  },

  // Free tier compatible resources
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },

  // Basic run arguments
  "runArgs": [
    "--cap-add=SYS_PTRACE"
  ],

  // Wait for the container to be ready
  "waitFor": "postCreateCommand"
}
