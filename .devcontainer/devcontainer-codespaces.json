{
  "name": "hetid R 4.5.0 Development (Codespaces Working)",

  // Use reliable base image for Codespaces (parallel config, preserving main setup)
  "image": "rocker/tidyverse:4.5.0",

  "features": {
    // Essential R packages for hetid project (tested and working)
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "AER,boot,dplyr,furrr,future,ggplot2,purrr,rlang,tidyr,devtools,testthat,knitr,rmarkdown,here,fs,glue,cli,gmm,xts,languageserver,lintr,styler,httpgd",
      "installSystemRequirements": true
    },

    // Build tools for R package compilation
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "configureZshAsDefaultShell": false,
      "installOhMyZsh": false,
      "upgradePackages": true
    },

    // Python for pre-commit hooks
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": false
    },

    // Git integration
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },

    // GitHub CLI
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "workspaceFolder": "/workspaces/heteroskedasticity_identification",

  // Port forwarding for RStudio Server and other services
  "forwardPorts": [
    8787,  // RStudio Server
    8080,  // httpgd for VS Code plots
    3838,  // Shiny apps
    4321   // Quarto preview
  ],

  // Security-focused port configuration
  "portsAttributes": {
    "8787": {
      "label": "RStudio Server",
      "onAutoForward": "notify",
      "visibility": "private",
      "requireLocalPort": false,
      "protocol": "http"
    },
    "8080": {
      "label": "R Graphics (httpgd)",
      "onAutoForward": "silent",
      "visibility": "private",
      "requireLocalPort": false
    },
    "3838": {
      "label": "Shiny Apps",
      "onAutoForward": "notify",
      "visibility": "private"
    },
    "4321": {
      "label": "Quarto Preview",
      "onAutoForward": "openPreview",
      "visibility": "private"
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        // R language support
        "REditorSupport.r",
        "reditorsupport.r-lsp",

        // Core development tools
        "ms-python.python",
        "GitHub.vscode-pull-request-github"
      ],

      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.colorTheme": "Default Dark+",
        "workbench.startupEditor": "readme"
      }
    }
  },

  // Optimized lifecycle hooks based on testing
  "onCreate": [
    "sudo apt-get update",
    "sudo apt-get install -y build-essential gfortran libxml2-dev libcurl4-openssl-dev libssl-dev",
    "R -e 'install.packages(c(\"gmm\", \"xts\"), repos = \"https://cran.rstudio.com/\")'",
    "pip install --user pre-commit"
  ],

  "postCreateCommand": "bash .devcontainer/setup-hetid.sh",

  "postStartCommand": [
    "echo 'ðŸš€ hetid Development Environment Ready!'",
    "echo 'ðŸ“Š RStudio Server: Access via Ports tab (8787) - may need manual start'",
    "echo 'ðŸ’» VS Code R: Excellent for interactive development'",
    "echo 'ðŸ”¬ hetid package: Use devtools::load_all() to load your functions'",
    "sudo service rstudio-server start 2>/dev/null || echo 'Note: Start RStudio manually if needed: sudo service rstudio-server start'"
  ],

  "postAttachCommand": "echo 'Welcome to hetid heteroskedasticity identification development! ðŸŽ¯'",

  // Secure container configuration
  "remoteUser": "rstudio",
  "containerUser": "rstudio",

  // Secure environment variables (no ROOT or DISABLE_AUTH)
  "remoteEnv": {
    "RSTUDIO_WHICH_R": "/usr/local/bin/R",
    "R_LIBS_USER": "/usr/local/lib/R/site-library",
    "GITHUB_CODESPACES": "true"
  },

  // Free tier compatible resources
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },

  // Basic run arguments
  "runArgs": [
    "--cap-add=SYS_PTRACE"
  ],

  // Wait for the container to be ready
  "waitFor": "postCreateCommand"
}
