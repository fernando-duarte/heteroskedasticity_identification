# R package build ignore file - Updated June 2025
# See: https://r-pkgs.org/package-structure-state.html

# Package build artifacts (specific patterns)
^hetid\.Rcheck$
^hetid_.*\.tar\.gz$
^.*\.Rcheck$
^.*\.tar\.gz$
^.*\.tgz$
^.*\.zip$
^\.\.Rcheck$

# Documentation building
^doc$
^docs$
^pkgdown$
^_pkgdown\.yml$
^inst/doc$
^Meta/$

# Development and version control
^\.git$
^\.gitattributes$
^\.gitignore$
^\.github$
^\.github/workflows$

# Development tools and CI/CD
^\.devcontainer$
^\.circleci$
^\.travis\.yml$
^\.gitlab-ci\.yml$
^appveyor\.yml$
^azure-pipelines\.yml$
^codecov\.yml$
^\.pre-commit-config\.yaml$
^\.pre-commit-config\.backup\.yaml$
